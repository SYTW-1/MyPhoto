.jumbotron.bg
  .row.space
  .row.title
    .col-md-3
    .col-md-6
      %h1 My Photo
      %h2 Localiza tus fotos para no olvidar dónde las hiciste
      %h3 Entra con Google o Facebook y guárdalas
    .col-md-3
  .row.space
  .row.delimiter
.container
  .page-header
    %h1#photo
      %i.fa.fa-camera-retro
      Últimas fotos
    %hr.hr
  .row#photobox.js-masonry{"data-masonry-options"=>'{ "columnWidth": 175, "itemSelector": ".item" }'}
    - @images.each do |img|
      %a{:href=>"/places/#{img.id}"}
        %img.thumbnail.shadow.item{:src => "data:image/png;base64,#{img.image}", :class => "img-responsive"}
  .row
    %h1#upload
      %i.fa.fa-cloud-upload
      Subir imagen
      .pull-right
        //Provisional al contrario para no tener que loguear
        - if session['user']
          %button.btn.btn-success
            %i.fa.fa-google
            Entrar con Google
          %button.btn.btn-success
            %i.fa.fa-facebook
            Entrar con Facebook
        - else
          %button.btn.btn-warning#cancel{"onclick"=>"javascript: document.getElementById(\"saveform\").reset();document.getElementById(\"list\").innerHTML = '';"}
            %i.fa.fa-trash
            Cancelar
          %button.btn.btn-success#save{"onclick"=>"javascript: document.getElementById(\"saveform\").submit();"}
            %i.fa.fa-save
            Guardar
    %hr.hr
    - if session['user']
      .mark
        %h1 Es necesario haber iniciado sesión para realizar esta acción.
    -else
      %form#saveform{"action"=>"/upload","method"=>"post", "enctype"=>"multipart/form-data"}
        %input#file{"name"=>"myfile","type"=>"file"}
        %label.mklabel
          .mark#list

